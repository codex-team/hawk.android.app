<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/tv_event_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="13dp"
        android:maxLines="2"
        android:text="@string/error_message_event"
        android:textColor="#dbe6ff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/barrier"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_count_event"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="7dp"
        android:background="@drawable/count_text_event"
        android:fontFamily="@font/roboto_bold"
        android:includeFontPadding="false"
        android:maxLength="5"
        android:paddingStart="7dp"
        android:paddingTop="3.5dp"
        android:paddingEnd="7dp"
        android:paddingBottom="3.5dp"
        android:text="@string/count_in_event"
        android:textAlignment="center"
        android:textColor="#dbe6ff"
        android:textSize="10dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tv_time_of_error"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_time_of_error"
        android:layout_width="30dp"
        android:layout_height="16dp"
        android:layout_marginEnd="5dp"
        android:lineSpacingExtra="4dp"
        android:lineSpacingMultiplier="1.3"
        android:text="@string/time_of_error"
        android:textAlignment="center"
        android:textColor="#dbe6ff"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/user_image"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/user_image"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="15dp"
        android:src="@drawable/ic_user"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="start"
        app:constraint_referenced_ids="tv_count_event,tv_time_of_error,user_image" />


</androidx.constraintlayout.widget.ConstraintLayout>