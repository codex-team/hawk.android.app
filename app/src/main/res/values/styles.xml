<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="CodexBase" parent="Theme.AppCompat.DayNight.DarkActionBar"/>

    <style name="CodexBase.V7">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CodexBase.Theme" parent="CodexBase.V7"/>

    <!-- Base application theme. -->
    <style name="CodexTheme" parent="CodexBase.Theme">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/hawk_background</item>
        <item name="android:buttonStyle">@style/CodexTheme.Button</item>
        <item name="codexEditTextTheme">@style/CodexTheme.EditText</item>
        <item name="customSearchViewStyle">@style/CodexTheme.SearchView</item>
        <item name="borderedImageViewStyle">@style/CodexTheme.BorderedImageView</item>
    </style>

    <style name="CodexTheme.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/button_background_accent</item>
        <item name="android:textColor">@color/very_light_blue</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:paddingStart">26dp</item>
        <item name="android:paddingEnd">26dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textAppearance">
            @style/CodexTheme.TextButtonAppearance.ColoredBackground
        </item>
    </style>

    <style name="CodexTheme.TextTitleAppearance" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/very_light_blue</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CodexTheme.TextButtonAppearance" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/very_light_blue_60</item>
        <item name="android:textSize">13sp</item>
        <item name="android:letterSpacing" tools:ignore="NewApi">0.0125</item>
    </style>

    <style name="CodexTheme.TextButtonAppearance.ColoredBackground">
        <item name="android:textColor">@color/very_light_blue</item>
        <item name="android:textSize">14.4sp</item>
        <!--<item name="android:textStyle">bold</item>-->
    </style>

    <style name="CodexTheme.TextButtonAppearance.Bold" parent="CodexTheme.TextButtonAppearance">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing" tools:ignore="NewApi">0.0125</item>
    </style>

    <style name="CodexTheme.Button.Text" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:padding">0dp</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/very_light_blue_60</item>
        <item name="android:textAppearance">@style/CodexTheme.TextButtonAppearance</item>
    </style>

    <style name="CodexTheme.Button.Text.Bold" parent="CodexTheme.Button.Text">
        <item name="android:padding">0dp</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:textAppearance">@style/CodexTheme.TextButtonAppearance.Bold</item>
    </style>

    <style name="CodexTheme.EditText" parent="Codex.Widgets.EditTextTheme">
        <item name="codex_titleColor">@color/very_light_blue_60</item>
        <item name="codex_textColor">@color/very_light_blue</item>
    </style>

    <style name="CodexTheme.SearchView" parent="Codex.Widgets.CustomSearchViewTheme">
        <item name="codex_textColor">@color/very_light_blue</item>
        <item name="codex_hintColor">@color/very_light_blue_60</item>
        <item name="cardBackgroundColor">@color/search_background</item>
        <item name="imageTint">@color/very_light_blue_60</item>
        <item name="corners">7dp</item>
    </style>
    
    <style name="CodexTheme.BorderedImageView" parent="Codex.Widgets.BorderedImageViewStyle">
        <item name="android:scaleType">centerCrop</item>
    </style>

</resources>
