<resources>

    <!-- Base application theme. -->
    <style name="CodexTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/hawk_background</item>
        <item name="android:buttonStyle">@style/CodexTheme.Button</item>
    </style>

    <style name="CodexTheme.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">12sp</item>
        <item name="android:padding">8dp</item>
        <item name="android:background">@drawable/button_background_accent</item>
        <item name="android:minWidth">110dp</item>
    </style>

    <style name="CodexTheme.Button.Text" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:background">@null</item>
    </style>

    <style name="CodexTheme.EditText" parent="Codex.Widgets.EditTextTheme">

    </style>

</resources>
